{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./app/*"],
      "@components/*": ["./app/components/*"],
      "@utils/*": ["./app/utils/*"],
      "@types/*": ["./app/types/*"],
      "@services/*": ["./app/services/*"],
      "@providers/*": ["./app/providers/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
