{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/shared/components/*"],
      "@utils/*": ["./src/shared/utils/*"],
      "@types/*": ["./src/shared/types/*"],
      "@services/*": ["./src/services/*"],
      "@providers/*": ["./src/providers/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
